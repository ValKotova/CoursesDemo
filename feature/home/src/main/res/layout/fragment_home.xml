<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.magni.coursesdemo.feature.home.presentation.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconMinSize="24dp"
            app:startIconTint="@color/white"
            style="@style/Widget.RoundedApp.TextInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                style="@style/Widget.RoundedApp.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:padding="15dp"
                android:hint="@string/search"/>

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_circle_ripple"
            app:tint="@color/white"
            android:src="@drawable/ic_filter" />

    </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSort"
            android:layout_marginBottom="16dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="@string/sort_by_date"
            android:backgroundTint="@color/dark"
            android:textAppearance="@style/TextAppearance.LabelLarge"
            android:drawableEnd="@drawable/ic_arrow_down_up"
            app:iconSize="16dp"
            android:padding="0dp"
            android:textColor="@color/colorPrimary" />

    <com.magni.coursesdemo.presentation.StatefulContainer
        android:id="@+id/stateContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.magni.coursesdemo.presentation.StatefulContainer>

</LinearLayout>