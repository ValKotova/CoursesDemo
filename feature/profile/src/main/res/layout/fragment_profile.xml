<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.magni.coursesdemo.feature.profile.ProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/profile"
        android:textAppearance="@style/TextAppearance.Header1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_rounded"
        android:backgroundTint="@color/container"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSupport"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:backgroundTint="@color/container"
            android:padding="0dp"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:text="@string/support"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4D555E" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:padding="0dp"
            android:backgroundTint="@color/container"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:text="@string/settings"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4D555E" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:padding="0dp"
            android:backgroundTint="@color/container"
            android:drawableEnd="@drawable/ic_chevron_right"
            android:text="@string/log_out"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/your_courses"
        android:textAppearance="@style/TextAppearance.Header1" />


    <com.magni.coursesdemo.presentation.StatefulContainer
        android:id="@+id/stateContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>