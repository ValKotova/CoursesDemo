<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/container"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        app:cardCornerRadius="16dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <eightbitlab.com.blurview.BlurTarget
                android:id="@+id/blurTarget"
                android:layout_width="0dp"
                android:layout_height="114dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
            <ImageView
                android:id="@+id/ivCourseImage"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />
            </eightbitlab.com.blurview.BlurTarget>

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/likeButtonContainer"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="8dp"
                android:background="@drawable/bg_blur_circle"
                app:blurOverlayColor="#32333A4D"
                app:layout_constraintEnd_toEndOf="@id/blurTarget"
                app:layout_constraintTop_toTopOf="@id/blurTarget">

                <ImageButton
                    android:id="@+id/ibLike"
                    android:padding="6dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="fitCenter"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </eightbitlab.com.blurview.BlurView>

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/ratingContainer"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_blur_rounded"
                app:layout_constraintBottom_toBottomOf="@id/blurTarget"
                app:layout_constraintStart_toStartOf="@id/blurTarget"
                app:blurOverlayColor="#32333A4D">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:layout_gravity="center"
                    android:paddingEnd="8dp">

                    <ImageView
                        android:id="@+id/ivStar"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="4dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_star_filled"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.BodySmall"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        tools:text="4.9" />
                </LinearLayout>

            </eightbitlab.com.blurview.BlurView>

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/dateContainer"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_blur_rounded"
                app:layout_constraintBottom_toBottomOf="@+id/blurTarget"
                app:layout_constraintStart_toEndOf="@+id/ratingContainer"
                app:blurOverlayColor="#32333A4D">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.BodySmall"
                    android:textColor="@android:color/white"
                    tools:text="22 Мая 2024" />

            </eightbitlab.com.blurview.BlurView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:textAppearance="@style/TextAppearance.Header2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/blurTarget"
                tools:text="Course Title" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.BodySmall"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                tools:text="This is a course description that might be long and will be truncated with ellipsis if it doesn't fit in two lines" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:textAppearance="@style/TextAppearance.Header2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                tools:text="5 900 ₽" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMore"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDescription"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="@string/more"
                    android:padding="0dp"
                    android:backgroundTint="@color/container"
                    android:textAppearance="@style/TextAppearance.LabelSmall"
                    android:drawableEnd="@drawable/ic_arrow_right_short_fill"
                    android:drawableTint="?attr/colorPrimary"
                    android:textColor="?attr/colorPrimary" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>